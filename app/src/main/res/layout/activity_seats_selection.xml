            android:layout_marginHorizontal="3dp"
            android:textAlignment="center"/>

        <RadioButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="12"
            android:textColor="@color/background_main"
            android:button="@android:color/transparent"
